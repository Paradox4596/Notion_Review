#include <iostream>

int main()
{
	char buf[]
	{
		"########\n# .. p #\n# oo   #\n#      #\n########"
	};

	std::cout << buf << std::endl;
}

-----------------------------------------------------------------------------------------------------------------------------------------------------
위와 아래 같은 코드
-----------------------------------------------------------------------------------------------------------------------------------------------------

#include <iostream>

int main()
{
	char buf[]
	{
		"\
########\n\
# .. p #\n\
# oo   #\n\
#      #\n\
########"
	};

	std::cout << buf << std::endl;
}
